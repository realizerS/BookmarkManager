{

  "manifest_version": 2,
  "name": "Bookmark Manager",
  "version": "1.0",

  "description": "Manage your own bookmark",

  "icons": {
    "16": "img/icons/icon-16.png",
    "32": "img/icons/icon-32.png",
    "48": "img/icons/icon-48.png",
    "64": "img/icons/icon-64.png",
    "128": "img/icons/icon-128.png",
    "256": "img/icons/icon-256.png"
  },

  "applications": {
    "gecko": {
      "id": "bookmarkmanager@kinakomochi.net",
      "strict_min_version": "45.0.0"
    }
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "bookmarks",
    "contextMenus",
    "storage"
  ],


  "background": {
    "scripts": ["js/background.js"]
  },

  "browser_action": {
    "default_title": "Open bookmark management page",
    "default_icon": "img/icons/icon-32.png"
  }

}